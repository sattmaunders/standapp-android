<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_title_google_fit"
        android:key="pref_title_google_fit">

        <SwitchPreference
            android:key="pref_key_step_recording"
            android:title="@string/pref_title_step_recording"
            android:defaultValue="false"
            android:summary="@string/pref_summary_step_recording"/>

        <Preference
            android:key="pref_key_active_subscriptions"
            android:summary="@string/pref_summary_active_subscriptions"
            android:title="@string/pref_title_active_subscriptions" />

        <SwitchPreference
            android:key="pref_key_session_recording"
            android:title="@string/pref_title_session_recording"
            android:defaultValue="true"
            android:summary="@string/pref_summary_session_recording"/>

        <Preference
            android:key="pref_key_disconnect_fit"
            android:summary="@string/pref_summary_disconnect_fit"
            android:title="@string/pref_title_disconnect_fit" />
    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/pref_title_notifications"
        android:key="pref_title_notifications">

        <SwitchPreference
            android:key="pref_key_start_workout_notification"
            android:title="@string/pref_start_workout"
            android:defaultValue="true"
            android:summary="@string/pref_summary_start_workout"/>

        <SwitchPreference
            android:key="pref_key_vibrate"
            android:title="@string/pref_title_vibrate"
            android:defaultValue="true"
            android:summary="@string/pref_summary_vibrate"/>

        <SwitchPreference
            android:key="pref_key_sound"
            android:title="@string/pref_title_sound"
            android:defaultValue="true"
            android:summary="@string/pref_summary_sound"/>

        <SwitchPreference
            android:key="pref_key_light"
            android:title="@string/pref_title_light"
            android:defaultValue="false"
            android:summary="@string/pref_summary_light"/>

    </PreferenceCategory>


</PreferenceScreen>
